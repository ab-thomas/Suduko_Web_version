"Hello, sudoko"

	<html>
	<head>
		<title>Sudoko Game</title>
		<!-- link to the CSS stylesheet-->
		<link href="/stylesheets/application.css" rel="stylesheet" type
	="text/css">
	</head>
	<body>
		<h1>Life is too short for playing Sudoku</h1>
		<div id="flash">
  <%= flash[:notice] %>
</div>

	<div id="suduko">
		<form action="/" method="post">
			<!-- all boxes, rows and cells -->
		<!-- one div for each row -->
		<% 3.times do |row| %>
			<div class='row'>
					<!-- we want to create a seperate div elements for boxes to
	style them using CSS -->
			<% 3.times do |box| %>
				<div class ="box">
			<!-- each box will have nine cells -->
			<% 3.times do |cell_row| %>
					<div class="cell-row">
					<% 3.times do |cell| %>
       
                  	<%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
     <button>Check solution</button>
  </div>
  </form>
	</div>
</body>
</html>









